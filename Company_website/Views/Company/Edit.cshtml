@model Company
<h1>Edit Company</h1>
<form class="m-3" method="post" action="/Company/EditCompany/@Model.Id">
  <div class="form-group mb-3">
    <label asp-for="Name">Company Name</label>
    <input type="text" class="form-control" name="Name" value="@Model.Name"> <!-- Corrected here -->
  </div>
  <div class="form-group mb-3">
    <label asp-for="Type">Company Type</label>
    <input type="text" class="form-control" name="Type" value="@Model.Type">
  </div>
  <div class="form-group mb-3">
    <label asp-for="DataStart">Company DataStart</label>
    <input type="text" class="form-control" name="DataStart" value="@Model.DataStart">
  </div>
  <div class="form-group mb-3">
    <label asp-for="Address">Company Address</label>
    <input type="text" class="form-control" name="Address" value="@Model.Address">
  </div>
  <button type="submit" value="Edit" class="btn btn-primary mt-3">Submit</button>
</form>
